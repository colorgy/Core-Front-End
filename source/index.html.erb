<script>
	$( function() {
	  // init Isotope
	  var $container = $('.isotope').imagesLoaded(function(){
	    $container.isotope({
	      itemSelector: '.element-item',
	      columnWidth: '.grid-sizer',
	    });
	  });
	})

	$(window).scroll(function(){
		var window_height = $(window).height();
		var window_pos = $(window).scrollTop() + window_height;
		var books_pos = $('#books-anchor').offset().top;
		var tasks_pos = $('#tasks-anchor').offset().top;
		var table_pos = $('#table-anchor').offset().top;

		if( window_pos > books_pos ){
			$('.info.books').addClass('active');
			$('.box-image.books').addClass('active');
		}
		if( window_pos > tasks_pos ){
			$('.info.tasks').addClass('active');
			$('.box-image.tasks').addClass('active');
		}
		if( window_pos > table_pos ){
			$('.info.table').addClass('active');
			$('.box-image.table').addClass('active');
		}

	})
</script>
